<div class="container padding">
  <h1 class="text-center padding_top">Группы</h1>
  <div class="group_box padding">

    <% @categories.each do |category| %>

    <div class="left_side">
      <div class="first_foto oneImg">
        <% category.images.each do |image| %>
          <%= image_tag(image.file_url, class: 'photos ng-scope') %>
        <% end %>
      </div>
      <div class="other_foto">
        <% category.images.each do |image| %>
          <%= image_tag(image.file_url, class: 'photos ng-scope') %>
        <% end %>
      </div>
    </div>

    <div class="group_info">
      <h2><%= link_to category.title, category_path(category) %></h2>
      <p><%= category.body %></p>
    </div>
  </div> 
  <% end %>
</div>


 




